# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=face_tracking_spa
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Application Configuration
APP_NAME=Facial Recognition SPA
APP_VERSION=1.0.0
DEBUG=False
API_V1_STR=/api/v1

# Security Configuration
SECRET_KEY=your_super_secret_key_here_please_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Face Recognition Configuration
FACE_DETECTION_THRESHOLD=0.5
FACE_MATCH_THRESHOLD=0.6
MAX_EMBEDDING_UPDATE_COOLDOWN=10
GLOBAL_TRACK_TIMEOUT=300
EMBEDDING_HISTORY_SIZE=5

# Camera Configuration
DEFAULT_CAMERA_RESOLUTION_WIDTH=1280
DEFAULT_CAMERA_RESOLUTION_HEIGHT=720
DEFAULT_CAMERA_FPS=15
VIDEO_STREAM_QUALITY=0.8

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# External API Configuration (Zoho - Optional)
ZOHO_API_BASE_URL=https://people.zoho.in/people/api
ZOHO_ACCESS_TOKEN=
ZOHO_REFRESH_TOKEN=
ZOHO_CLIENT_ID=
ZOHO_CLIENT_SECRET=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# Development Configuration
RELOAD=True
WORKERS=1